<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">
	<application>
		<resource-bundle>
			<base-name>sadped.eaaa.rnrtwitter.messages</base-name>
			<var>msgs</var>
		</resource-bundle>
	</application>
	<navigation-rule>
		<display-name>index.xhtml</display-name>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{userBean.verifyUser}</from-action>
			<from-outcome>login</from-outcome>
			<to-view-id>/home.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>profile.xhtml</display-name>
		<from-view-id>/profile.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{userBean.verifyUser}</from-action>
			<from-outcome>login</from-outcome>
			<to-view-id>/profile.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<display-name>index.xhtml</display-name>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{userBean.verifyUser}</from-action>
			<from-outcome>error</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<display-name>index.xhtml</display-name>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{userBean.createNew}</from-action>
			<from-outcome>login</from-outcome>
			<to-view-id>/profile.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>


</faces-config>
